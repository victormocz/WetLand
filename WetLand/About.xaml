            <TextBlock HorizontalAlignment="Center" Text="Authors: 1Kalin, L., 1Rezaeianzadeh, M., 2Hantush, M. M., 3Mo, C., and 4Sharifi, A."></TextBlock>
            <TextBlock></TextBlock>
            <TextBlock TextWrapping="Wrap" Text="1 School of Forestry and Wildlife Sciences, Auburn University, 602 Duncan Dr., Auburn, AL 36849"></TextBlock>
            <TextBlock TextWrapping="Wrap" Text="2 National Risk Management Research Laboratory, U.S. Environmental Protection Agency, Cincinnati, Ohio"></TextBlock>
            <TextBlock TextWrapping="Wrap" Text="3 Department of Computer Science and Software Engineering, 1301 Shelby Center, Auburn, AL 36849"></TextBlock>
            <TextBlock TextWrapping="Wrap" Text="4 Dept. of Environmental sciences and Technology (ENST), University of Maryland"></TextBlock>
            <TextBlock></TextBlock>
            <TextBlock></TextBlock>
            <TextBlock x:Name="webpage" HorizontalAlignment="Center" Foreground="Blue" PreviewMouseDown="webpage_PreviewMouseDown">http://www.auburn.edu/~kalinla/</TextBlock>
            <TextBlock HorizontalAlignment="Center">Copyright © 2014-2016 Authors, All Rights Reserved.</TextBlock>
            <Button x:Name="OK" Content="OK" Margin="0,10,0,0" Click="close_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
