        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WetLand"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="About" Height="330" Width="510">
    <Grid>
        <StackPanel>
            <TextBlock  HorizontalAlignment="Center" Text="WetQual GUI, version 1.0" FontSize="16" FontFamily="Times New Roman" FontWeight="Bold"></TextBlock>
            <TextBlock  HorizontalAlignment="Center" Text="Graphical User Interface for the Wetland Water Quality Model, WetQual" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold"></TextBlock>
